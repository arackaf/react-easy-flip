{
  "name": "react-easy-flip",
  "version": "1.1.1",
  "description": "A React library for animation using FLIP technique",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "scripts": {
    "build": "microbundle -f es,cjs --no-sourcemap --tsconfig tsconfig.build.json",
    "prepare": "yarn build",
    "format": "prettier --write src/**.ts src/*.ts demo/**/*.{ts,tsx}",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "develop": "yarn start"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jlkiri/react-easy-flip.git"
  },
  "keywords": [
    "react",
    "FLIP",
    "animation",
    "transition"
  ],
  "author": "Kirill Vasiltsov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlkiri/react-easy-flip/issues"
  },
  "homepage": "https://github.com/jlkiri/react-easy-flip#readme",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^3.1.1",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "react-test-renderer": "^16.11.0",
    "typescript": "^3.7.1-rc"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
