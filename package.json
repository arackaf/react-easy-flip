{
  "name": "react-easy-flip",
  "version": "1.0.0",
  "description": "A React library for animation using FLIP technique",
  "source": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "scripts": {
    "build": "microbundle -f es,cjs --no-sourcemap",
    "prepare": "yarn build",
    "format": "prettier --write src/**/*.{js,jsx} demo/**/*.{js,jsx}",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "deploy": "cd demo && now --prod",
    "develop": "cd demo && yarn start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jlkiri/react-easy-flip.git"
  },
  "keywords": [
    "react",
    "FLIP",
    "animation",
    "transition"
  ],
  "author": "Kirill Vasiltsov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlkiri/react-easy-flip/issues"
  },
  "homepage": "https://github.com/jlkiri/react-easy-flip#readme",
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2"
  }
}
